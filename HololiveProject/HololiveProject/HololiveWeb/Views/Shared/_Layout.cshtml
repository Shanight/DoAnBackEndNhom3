                        width: 150px; border-radius: 35px; border: 2px solid white;
                        color: #1da0d0;">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        
                        @if (User.IsInRole("admin"))
                        {
                            <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index"
                            title="Manage"><i class="fa-regular fa-user fa-xl me-3"></i></a>
                                <a id="admin"asp-controller="Products" asp-action="Index" class="nav-link"><i class="fa-solid fa-toolbox fa-xl me-3"></i></a>
                        }else{
<a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index"
