                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="AppRoles" asp-action="Index">Roles</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-2">
                <div class="box">
                    <form class="sbox" action="/search" method="get">
                        <input class="stext" type="text" name="q" placeholder="Tìm kiếm bài viết..."
                            style="font-size: medium; font-weight: 600;">
                        <a class="sbutton" type="submit" href="javascript:void(0);">
                            <i class="fa fa-search"></i>
                        </a>
                    </form>
                </div>
            </div>
            <div class="col-1">
                <div class="icon" style="background: rgba(240, 248, 255, 0.82) ;display: flex; 
                        height: 45px;align-items: center; justify-content: center;
                        width: 150px; border-radius: 35px; border: 2px solid white;
                        color: #1da0d0;">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="fa-regular fa-user fa-xl me-5"></i></a>
                    }else{
                        <a class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login"><i class="fa-regular fa-user fa-xl me-5"></i></a>
                    }
                    <i class="fa-solid fa-cart-shopping fa-xl"></i>
                </div>
            </div>
            <div class="col"></div>
        </div>
    </nav>
