    <!-- Header-->
    <nav class="navbar navbar-expand-lg navbar-light sticky-top position-fixed" style="left: 0; right: 0;">
        <div class="container-fluid">
            <div class="col-5 p-2">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="../../../../../../img/common_logo_holopro.svg" alt="" style="height: auto; width: 27%;">
                </a>
            </div>
            <div class="col-3">
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 justify-content-center" style="background: rgba(240, 248, 255, 0.82) ;width: 350px; border-radius: 30px; border:2px solid white; font-weight: 600;
                        font-size: large;">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Home"
                                asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Search" asp-action="Index">Shop</a>
                        </li>
                        <li class="nav-item">
