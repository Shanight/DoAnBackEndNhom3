@model IEnumerable<HololiveWeb.API.Models.Product>

@{
    ViewData["Title"] = "Products";
    Layout = "_AdminLayout";
}
<style>
    .truncate-text {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 100px; /* Điều chỉnh giá trị này để thay đổi số ký tự được hiển thị */
    }

</style>
<h1>Index</h1>

<p>
    <a href="../admin/products/Create">Create New</a>
</p>
<table class="table" style="overflow: auto; width: 100%;
  height: 110px;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Catetory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.img1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.img2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.img3)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody >
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Catetory)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.img1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.img2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.img3)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a href="../products/edit/@item.Id" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a href="../products/delete/@item.Id" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
