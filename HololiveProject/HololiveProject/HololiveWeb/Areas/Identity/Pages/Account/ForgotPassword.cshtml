@page
@model ForgotPasswordModel
@{
ViewData["Title"] = "Forgot your password?";
}
<div style="height: 90vh; display: flex; flex-direction: column; justify-content: center; align-items: center; ">

    <form method="post"
        style="border-radius: 10px; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); height: 40%; width: 40%; padding-inline: 20px;">
        <p style="margin-top: 20px; text-align: center; font-size: 30px; font-weight: 600;">Forgot your password?</p>
        <p style="text-align: center;">Enter your email.</p>
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"
                placeholder="name@example.com" />
            <label asp-for="Input.Email" class="form-label"></label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
    </form>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}