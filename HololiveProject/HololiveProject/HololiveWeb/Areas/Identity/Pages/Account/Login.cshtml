@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<style>
        .dangnhap{
            font-family: "M PLUS Rounded 1c",sans-serif!important;
        }

</style>
<div class="dangnhap" style="height: 90vh; display: flex; flex-direction: column; justify-content: center; align-items: center; ">
    <form id="account" method="post" style="border-radius: 10px; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); height: 52%; width: 40%; padding-inline: 20px;">
        <h4 style="font-weight: 700; text-align: center; font-size: 35px;padding-top: 10px;">Sign in</h4>
        <p style="text-align: center;">Please enter your email and password</p>
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div style=" text-align: center;">
                    <input id="login-submit" type="submit" type="button" value="SIGN IN" style="border-radius:10px; width: 45%; height: 45px; font-size: small;background-color: rgb(60, 194, 220); border: none; color:white;">
                </div>
                <div>
                    <p style="margin-top: 7px;">
                        You forgot the password? <a id="forgot-password" asp-page="./ForgotPassword">Click here</a>
                    </p>
                    <p>
                        You haven't a account?<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Click here</a>
                    </p>
                </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
